                name="search"
                type="text"
                label="COM_DKQMAKER_QUESTIONS_SEARCH_LABEL"
                description="COM_DKQMAKER_QUESTIONS_SEARCH_DESCRIPTION"
                hint="JSEARCH_FILTER"
        />

        <field
                name="quiz_id"
                type="quiz"
                extension="com_dkqmaker"

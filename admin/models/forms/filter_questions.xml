        <field
                name="published"
                type="list"
                label="COM_DKQMAKER_QUESTIONS_FILTER_PUBLISHED_LABEL"
                description="COM_DKQMAKER_QUESTIONS_FILTER_PUBLISHED_DESCRIPTION"
                onchange="this.form.submit();"
        >
            <option value="">COM_DKQMAKER_QUESTIONS_FILTER_PUBLISHED_SELECT</option>

                name="version"
                type="number"
                label="COM_DKQMAKER_MESSAGE_VERSION_LABEL"
                description="COM_DKQMAKER_MESSAGE_VERSION_DESCRIPTION"
                size="40"
                class="inputbox"
                default=""
                readonly="true"/>

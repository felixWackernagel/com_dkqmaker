                name="number"
                type="number"
                default=""
                label="COM_DKQMAKER_MESSAGE_NUMBER_LABEL"
                description="COM_DKQMAKER_MESSAGE_NUMBER_DESCRIPTION"
                min="1"
                step="1"
                required="true"/>

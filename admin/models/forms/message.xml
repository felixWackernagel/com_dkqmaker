                name="last_update"
                type="calendar"
                label="COM_DKQMAKER_MESSAGE_LAST_UPDATE_LABEL"
                description="COM_DKQMAKER_MESSAGE_LAST_UPDATE_DESCRIPTION"
                class="input-medium"
                required="false"
                filter="user_utc"
                format="%Y-%m-%d %H:%M:%S"
                singleheader="true"
                translateformat="true"
                showtime="true"
                timeformat="24"
                readonly="true"/>
